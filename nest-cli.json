{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".dto.ts"
          ]
        }
      }
    ],
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ]
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "packages/common",
      "entryFile": "index",
      "sourceRoot": "packages/common/src",
      "compilerOptions": {
        "tsConfigPath": "packages/common/tsconfig.lib.json"
      }
    },
    "core": {
      "type": "application",
      "root": "packages/core",
      "entryFile": "main",
      "sourceRoot": "packages/core/src",
      "compilerOptions": {
        "tsConfigPath": "packages/core/tsconfig.app.json"
      }
    }
  }
}