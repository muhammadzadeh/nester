{
  "name": "@repo/exception",
  "description": "The App Exception",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "clean": "rm -rf dist",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    "enum": {
      "types": "./src/enums.ts",
      "default": "./dist/enums.js"
    },
    "constant": {
      "types": "./src/constants.ts",
      "default": "./dist/constants.js"
    }
  },
  "dependencies": {
    "@repo/types": "*",
    "@nestjs/mapped-types": "*",
    "@nestjs/common": "^10.4.6",
    "@nestjs/core": "^10.4.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nestjs-i18n": "^10.4.9",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.3.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "5.4.5"
  }
}
